<%- include("partials/header") %>
<header class="jumbotron jumbotron-fluid">
    <div class="container-fluid text-center">
        <h1>Add albums to your collection</h1>
    </div>
</header>
        
<div class="container-fluid">
    <form action="/albums" method="POST">
        <div class="form-group">
            <label for="name">Album title:</label>
            <input class="form-control" type="text" name="name" placeholder="e.g. Déjà Vu">
        </div>
        <div class="form-group">
            <label for="artist">Artist:</label>
            <input class="form-control" type="text" name="artist" placeholder="e.g. Crosby, Stills, Nash & Young">
        </div>
        <div class="form-group">
            <label for="genre">Genre:</label>
            <input class="form-control" type="text" name="genre" placeholder="e.g. Folk Rock">
        </div>
        <div class="form-group">
            <label for="image">Image URL</label>
            <input class="form-control" type="text" name="image" placeholder="e.g. https://upload.wikimedia.org/wikipedia/en/thumb/9/90/Crosby%2C_Stills%2C_Nash_%26_Young_-_Deja_Vu.jpg/220px-Crosby%2C_Stills%2C_Nash_%26_Young_-_Deja_Vu.jpg">
        </div>
        <div class="form-group">
            <button class="btn btn-md btn-primary btn-block">Submit</button>
        </div>                    
    </form>
    <div id="back-btn">
        <a href="/albums">Back to album page</a>
    </div>    
</div>
<%- include("partials/footer") %>