<%- include("partials/header") %>
<header class="page-header container jumbotron">
    <div class="text-center">
        <h1>Create your own account</h1>                
    </div>
</header>
<main class="page-body container">
    <div class="row">       
        <form action="/register" method="POST">
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" type="text" name="username" placeholder="e.g. Jane/John Doe">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" name="password" pattern=".{8,}" placeholder="Must contain at least 8 characters">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-dark btn-block">Sign up</button>
            </div>    
        </form>        
    </div>
</main>
<%- include("partials/footer") %>