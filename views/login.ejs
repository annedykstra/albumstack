<%- include("partials/header") %>
<div class="wrapper">
    <header class="page-header container jumbotron">
        <div class="text-center">
            <h1>Log in with your account</h1>                
        </div>
    </header>
    <main class="page-body container">
        <div class="row">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input class="form-control" type="text" name="username" placeholder="e.g. Jane/John Doe">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control" type="password" name="password" placeholder="your password">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-dark btn-block">Log in</button>
                </div>
            </form>       
        </div>
    </main>
<%- include("partials/footer") %>