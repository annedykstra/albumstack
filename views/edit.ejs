<%- include("partials/header") %>
<div class="wrapper">
    <header class="page-header container jumbotron">
        <div class="text-center">
            <h1>Edit album info</h1>
            <div class="album-btn">
                <form action="/albums/<%= album._id %>?_method=DELETE" method="POST">
                    <button class="album-btn btn btn-outline-warning btn-md">Delete album</button>
                </form>            
            </div>
        </div>
    </header>        
    <main class="page-body container">
        <form action="/albums/<%= album._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Edit album title:</label>
                <input class="form-control" type="text" name="album[title]" value="<%= album.title %>">
            </div>
            <div class="form-group">
                <label for="artist">Edit artist:</label>
                <input class="form-control" type="text" name="album[artist]" value="<%= album.artist %>">
            </div>
            <div class="form-group">
                <label for="genre">Edit genre:</label>
                <input class="form-control" type="text" name="album[genre]" value="<%= album.genre %>">
            </div>
            <div class="form-group">
                <label for="image">Edit image URL:</label>
                <input class="form-control" type="text" name="album[image]" value="<%= album.image %>">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-dark btn-block">Submit changes</button>
            </div>                    
        </form>
        <div id="back-btn">
            <a href="/albums">Back to album page</a>
        </div>    
    </main>
<%- include("partials/footer") %>