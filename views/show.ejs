<%- include("partials/header") %>
<header class="page-header container jumbotron">
    <div class="text-center">
        <h1>Album info</h1>                  
        <% if(currentUser && album.author.id.equals(currentUser._id)){ %>
        <div class="album-btn">
            <a class="album-btn btn btn-outline-light btn-md" href="/albums/<%= album._id %>/edit">Edit album</a>
        </div>
    <% } %>            
    </div>
</header>
<main class="page-body container">
    <div class="row">
        <div class="col-md-3 order-md-1"></div>
            <div class="nav col-md-3 order-md-3 justify-content-center text-center my-auto">    
                <div id="info" class="text-left-md">
                    <p><h4><%= album.title %></h4></p> 
                    <p><%= album.artist %></p>
                    <p id="genre"><em><%= album.genre %></em></p>                                
                </div>
            </div>
            <div class="nav col-md-3 order-md-2 justify-content-center my-auto">
                <div>
                    <img src="<%= album.image %>" alt="<%= album.title %>" class="img-info img-thumbnail img-fluid">
                    <div id="back-btn">
                        <a href="/albums">Back to album page</a>
                    </div>
                </div>                        
            </div>        
        <div class="col-md-3 order-md-4"></div>
    </div>          
</main>
<%- include("partials/footer") %>