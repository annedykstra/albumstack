<%- include("partials/header") %>
<header class="jumbotron jumbotron-fluid">
    <div class="container-fluid text-center">
        <h1>Album info</h1>                  
        <% if(currentUser && album.author.id.equals(currentUser._id)){ %>
        <div class="album-btn">
            <a class="btn btn-outline-dark btn-md" href="/albums/<%= album._id %>/edit">Edit album</a>
        </div>
    <% } %>            
    </div>
</header>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 order-md-1"></div>
        <div class="nav col-md-3 order-md-3 align-self-center justify-content-center text-center">    
            <div class="text-left-md">
                <p><h4><%= album.title %></h4></p> 
                <p><%= album.artist %></p>
                <p id="genre"><em><%= album.genre %></em></p>                                
            </div>
        </div>
        <div class="nav col-md-3 order-md-2 justify-content-center">
            <div>
                <img src="<%= album.image %>" alt="<%= album.title %>" class="img-fluid">
                <div id="back-btn">
                    <a href="/albums">Back to album page</a>
                </div>
            </div>                        
        </div>        
        <div class="col-md-3 order-md-4"></div>
    </div>          
</div>
<%- include("partials/footer") %>