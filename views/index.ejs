<%- include("partials/header") %>
<header class="jumbotron jumbotron-fluid">
    <div class="container-fluid text-center">
        <h1>Share your collection on AlbumStackâ„¢</h1>
        <p id="subtitle">Let's put it together!</p>
        <div class="album-btn">
            <a class="btn btn-outline-dark btn-md" href="/albums/new">Add new album</a>
        </div>
    </div>
</header>

<div class="container-fluid">
    <div class="row">
        <% albums.forEach(function(album){ %>
            <div class="nav col-md-4 justify-content-center">
                <div class="img-thumbnail">
                    <a href="/albums/<%= album._id %>">
                    <img src="<%= album.image %>" alt="<%= album.title %>" class="img-fluid">
                    </a>                    
                </div>
            </div>               
        <% }); %>
    </div>
</div>
<%- include("partials/footer") %>